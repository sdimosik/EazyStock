<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="RoundedImageView" parent="">
        <item name="cornerSize">12dp</item>
        <item name="cornerFamily">rounded</item>
    </style>

    <style name="AppTabLayout" parent="Widget.Design.TabLayout">

        <item name="tabTextAppearance">@style/AppTabTextAppearance</item>
        <item name="tabGravity">center</item>
        <item name="tabIndicatorColor">@color/colorOnPrimary</item>
        <item name="tabIndicator">@drawable/tab_indicator</item>
        <item name="tabIndicatorGravity">stretch</item>
        <item name="tabSelectedTextColor">@color/colorPrimary</item>
        <item name="tabMode">fixed</item>
        <item name="tabRippleColor">@color/transparent</item>

    </style>

    <!-- for text -->
    <style name="AppTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="android:textSize">@dimen/sp_L1</item>
        <item name="android:textColor">@color/secondaryOnPrimary</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="Recycler.Default" parent="Widget.AppCompat.ListView">
        <item name="android:overScrollMode">never</item>
        <item name="android:clipToPadding">false</item>
    </style>

    <style name="Recycler.Linear" parent="Recycler.Default">
        <item name="layoutManager">androidx.recyclerview.widget.LinearLayoutManager</item>
    </style>

    <style name="Recycler.Linear.Horizontal" parent="Recycler.Linear">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="Recycler.Linear.Vertical" parent="Recycler.Linear">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
    </style>

    <style name="TextView.Default" parent="Widget.MaterialComponents.TextView">
        <item name="android:fontFamily">@font/montserrat_bold</item>
    </style>

    <style name="TextView.Semi" parent="Widget.MaterialComponents.TextView">
        <item name="android:fontFamily">@font/montserrat_semi_bold</item>
    </style>

